<?xml version="1.0"?>

<ivy-module version="2.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:noNamespaceSchemaLocation="http://incubator.apache.org/ivy/schemas/ivy.xsd">

	<info organisation="caGrid" module="framework-namingauthority" revision="${project.version}">
		<license name="caGrid" url="http://cagrid.org/wiki/CaGrid:LICENSE-1.3" />
		<description>caGrid identifiers naming authority modules</description>
	</info>

	<configurations>
		<conf name="impl" visibility="private" extends="service"/>
		<conf name="impl-test" visibility="private" />
		<conf name="annotations" visibility="private" />
      <conf name="serviceTools" visibility="private" />

    	<conf name="stubs" visibility="public" />
    	<conf name="common" extends="stubs,annotations" visibility="public" />
    	<conf name="client" extends="common" visibility="public" />
    	<conf name="service" visibility="public" extends="client" />
    	<conf name="test" visibility="public" extends="service,impl-test" />
		<conf name="default" visibility="public" extends="impl" />
	</configurations>

	<publications>
		<artifact name="caGrid-identifiers-namingauthority" conf="default" type="jar" />
	</publications>

	<dependencies>
		<dependency rev="latest.integration" org="caGrid" name="framework-core"
         conf="impl->default" transitive="true" />

		<!-- External Dependencies -->
    	<dependency rev="3.2.+" org="hibernate" name="hibernate" conf="service->default" />
    	<dependency rev="2.2" org="apache" name="tomcat-servlet" conf="service->default" />
    	<dependency rev="6.1.18" org="jetty" name="jetty" conf="service->default" />
    	<dependency rev="6.1.18" org="jetty" name="jetty-util" conf="service->default" />

	</dependencies>

</ivy-module>
