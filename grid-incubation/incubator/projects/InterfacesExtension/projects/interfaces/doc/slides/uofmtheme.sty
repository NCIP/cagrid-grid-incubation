\usepackage{beamerthemesplit}
\usetheme{Warsaw}
\definecolor{darkblue}{rgb}{0,0,0.8}
\definecolor{maroon}{rgb}{.4,0,0}
\definecolor{gold}{rgb}{.85,.55,.05}


\setbeamercolor*{block title}{bg=maroon,fg=white}
\setbeamercolor*{block body}{fg=black,bg=gold!50}

% \setbeamercolor{alerted text}{fg=black!80!maroon}
