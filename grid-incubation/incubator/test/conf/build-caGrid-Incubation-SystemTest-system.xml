<!-- Delegating build script, used by cruisecontrol to build MY_PROJECT_1.
     Note that the basedir is set to the checked out project -->
<project name="caGrid-Incubation-SystemTest-system"
        default="test"
        basedir="checkout/caGrid-Incubation-SystemTest-system">
		
	<property environment="env"/>

	<echo message="${cc.home}"/>
	<taskdef name="svn" classname="org.tigris.subversion.svnant.SvnTask">
          <classpath>
              <pathelement location="${env.SVN_HOME}/lib/svnant.jar" />
			  <pathelement location="${env.SVN_HOME}/lib/svnClientAdapter.jar" />
			  <pathelement location="${env.SVN_HOME}/lib/svnjavahl.jar" />
          </classpath>
	</taskdef>

		
    <target name="update" depends="">
		<svn>
		  <update dir="."/>
		</svn>
    </target>

    <target name="build" depends="update">
        <!-- Call the target that does everything -->
        <ant dir="${env.CRUISE_WORK}/checkout/caGrid-Incubation-SystemTest-system/test" antfile="build.xml" target="clean" inheritAll="false" inheritRefs="true"/>
        <ant dir="${env.CRUISE_WORK}/checkout/caGrid-Incubation-SystemTest-system/test" antfile="build.xml" target="all" inheritAll="false" inheritRefs="true"/>
    </target>

    <target name="test" depends="build">
        <!-- Call the target that tests  -->
        <ant dir="${env.CRUISE_WORK}/checkout/caGrid-Incubation-SystemTest-system/test" antfile="build.xml" target="test" inheritAll="false" inheritRefs="true">
            <property name="run.system.tests" value="false"/>
            <property name="create.test.report" value="false"/>
            <property name="dart.buildname" value="${ant.project.name}-${os.name}-${os.arch}-${os.version}-JDK-${java.version}"/>
        </ant>
    </target>
</project>
